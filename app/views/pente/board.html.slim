h1 Pente

#pente

coffee:
  $ -> window.pente = new Pente('#pente')

sass:
  span.stone
    &.player0
      background: url('/assets/white-dot.svg') no-repeat center center
    &.player1
      background: url('/assets/black-dot.svg') no-repeat center center

  #board
    border-bottom: 1px solid grey
    border-right: 1px solid grey
    &.player0
      cursor: url('/assets/white-dot.svg') 15 15, auto
    &.player1
      cursor: url('/assets/black-dot.svg') 15 15, auto

    .field
      position: relative
      background-color: #E6C36A
      border-left: 1px solid grey
      border-top: 1px solid grey

      span.stone
        position: absolute
        width: 40px
        height: 40px

  #players
    float: right
    width: 320px
    h3
      padding: 4px
      border-radius: 30px
      font-weight: normal

    .winner
      h3
        border: 5px solid red
        &::after
          content: ": !!! SIEGER !!!"
    .current
      h3
        font-weight: bold

    span.stone
      width: 25px
      height: 25px
      display: inline-block

      &.second
        position: relative
        left: -15px
